@model ContactModel

@{
    ViewData["Title"] = "Contact Form";
}

<div class="text-center">
    <h1 class="display-4">Contact Form</h1>
    <form asp-action="Contact" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="FirstName">First Name:</label>
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name:</label>
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress">Email:</label>
            <input type="email" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number:</label>
            <input type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactMessage">Message:</label>
            <textarea asp-for="ContactMessage"></textarea>
            <span asp-validation-for="ContactMessage"></span>
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>
